<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE MudletPackage>
<MudletPackage version="1.001">
    <TriggerPackage/>
    <TimerPackage/>
    <AliasPackage>
        <Alias isActive="yes" isFolder="no">
            <name>Global Command</name>
            <script>send(matches[2])
raiseGlobalEvent(&quot;my_event&quot;, matches[2])
</script>
            <command></command>
            <packageName></packageName>
            <regex>^:(.*)$</regex>
        </Alias>
    </AliasPackage>
    <ActionPackage/>
    <ScriptPackage>
        <Script isActive="yes" isFolder="no">
            <name>Global Command</name>
            <packageName></packageName>
            <script>function my_function(_, text)
    send(text)    
end

registerAnonymousEventHandler(&quot;my_event&quot;, &quot;my_function&quot;)</script>
            <eventHandlerList/>
        </Script>
    </ScriptPackage>
    <KeyPackage/>
</MudletPackage>
